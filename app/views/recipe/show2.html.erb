<%= render 'layouts/header2' %>
<%= render 'layouts/header_recipe' %>

<!--Serving Info -->
<p class="sectionheader">Serving Info:</p>

<table class="table2">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  
  <tr class="tableheader1">
    <th>Serving Size</th>
    <th>Recipe Yield</th>
    <th>Batch Yield</th>
    <th>Shelf Life</th>
  </tr>
  
  <% @t.each do |tbl| %>
    <tr>
      <td><%=tbl.ser_size %></td>
      <td><%=tbl.yld  %></td>
      <td><%=tbl.batch_yld %></td>
      <td><%=tbl.shelf_life %></td>
    </tr>
  <% end %>
</table>



<!--Ingredients -->
<p class="sectionheader">Ingredients:</p>

<table class="table2">
  <col style="width:5%">
  <col style="width:35%">
  <col style="width:20%">
  <col style="width:15%">
  <col style="width:8%">
  <col style="width:8%">
  <col style="width:8%">
  
  <tr class="tableheader1">
    <th>Line</th>
    <th>Ingredients</th>
    <th>Prep / Notes</th>
    <th>Supplier Code</th>
    <th>Amount</th>
    <th>Measure</th>
    <th>Cost</th>
    
  </tr>
  
  <% @t2.each do |tbl| %>
    <tr>
      <td><%=tbl.rid_li %></td>
      <td><%=tbl.desc %></td>
      <td><%=tbl.prep_notes %></td>
      <td><%=tbl.supc %></td>
      <td><%=tbl.amount %></td>
      <td><%=tbl.uofm %></td>
      <td><%=tbl.cost %></td>
    </tr>
  <% end %>
</table>



<!--Procedure -->
<p class="sectionheader">Procedure:</p>

<table class="table2">
  <col style="width:5%">
  <col style="width:80%">
  
  <tr class="tableheader1">
    <th>Step</th>
    <th>Description</th>
  </tr>
  
  <% @t3.each do |tbl| %>
    <tr>
      <td><%=tbl.rid_proc %></td>
      <td><%=tbl.rid_proc_desc %></td>
    </tr>
  <% end %>
</table>


