<%= render 'layouts/header2' %>
<%= render 'layouts/header_recipe' %>


<!--Nutritionals -->
<p class="sectionheader">Nutritionals:</p>

<table class="table2">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  
  <tr class="tableheader1">
    <th>Serving Size</th>
    <th>Calories</th>
    <th>Total Fat</th>
    <th>Calories from Fat</th>
    <th>Saturated fat</th>
    <th>Recipe Yield</th>
    <th>Batch Yield</th>
    <th>Shelf Life</th>
  </tr>
  
  <% @t_recipe.each do |tbl| %>
    <tr>
      <td><%=tbl.ser_size %></td>
      <td><%=tbl.calories %></td>
      <td><%=tbl.tfat %></td>
      <td><%=tbl.cfrmfat %></td>
      <td><%=tbl.satfat %></td>
      <td><%=tbl.yld  %></td>
      <td><%=tbl.batch_yld %></td>
      <td><%=tbl.shelf_life %></td>
    </tr>
  <% end %>
</table>


<!--Allergens -->
