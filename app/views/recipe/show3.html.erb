        <td><%=tbl.fiber %></td>
        <td><%=tbl.sugar %></td>
        <td><%=tbl.protein %></td>
    </tr>
    <% end %>
  </table>
<p class="whitespace10px"></p>  
<p class="whitespace10px"></p>  


