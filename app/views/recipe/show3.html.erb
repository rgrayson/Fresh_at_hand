<%= render 'layouts/header2' %>
<%= render 'layouts/header_recipe' %>

<table width="100%">
  <tr><td align="right"><%= button_to("Print", recipe_path,{class: 'btn_med'}) %></td></tr>
</table>


<!--Serving Info -->
  <p class="sectionheader">Serving Info:</p>
  
  <table class="table2">
    <col style="width:20%">
    <col style="width:20%">
    <col style="width:20%">
    <col style="width:20%">
    <col style="width:20%">
    
    <tr class="tableheader1">
      <th>Serving Size</th>
      <th>Recipe Yield</th>
      <th>Batch Yield</th>
      <th>Shelf Life</th>
      <th>Product Num</th>
    </tr>
    
    <% @t_recipe.each do |tbl| %>
      <tr>
        <td><%=tbl.ser_size %></td>
        <td><%=tbl.yld  %></td>
        <td><%=tbl.batch_yld %></td>
        <td><%=tbl.shelf_life %></td>
        <td><%=tbl.productnum%></td>
      </tr>
    <% end %>
  </table>
<p class="whitespace10px"></p>  
<p class="whitespace10px"></p>  


<!--Nutritionals1 -->
  <p class="sectionheader">Nutritionals:</p>
  
  <table class="table2">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    
    <tr class="tableheader1">
      <th>Calories</th>
      <th>Total Fat (g)</th>
      <th>%Calories from Fat</th>
      <th>Saturated fat (g)</th>
      <th>%Calories from Saturated Fat</th>
      <th>Trans Fat (g)</th>
    </tr>
    
    <% @t_recipe.each do |tbl| %>
      <tr>
        <td><%=tbl.calories %></td>
        <td><%=tbl.tfat %></td>
        <td><%=tbl.cfrmfat %></td>
        <td><%=tbl.satfat %></td>
        <td><%=tbl.calfrmsatfat%></td>
        <td><%=tbl.transfat %></td>
    </tr>
    <% end %>
  </table>


<!--Nutritionals2 -->
  <p></p>
  
  <table class="table2">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    <col style="width:15%">
    
