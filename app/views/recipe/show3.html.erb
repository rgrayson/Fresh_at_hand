  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
 
  
  <tr class="tableheader1">
    <th>Egg</th>
    <th>Shellfish</th>
    <th>Fish</th>
    <th>Soy</th>
    <th>Milk</th>
    <th>Tree Nuts</th>
    <th>Peanuts</th>
    <th>Wheat</th>
  </tr>
  
  <% @t_recipe.each do |tbl| %>
    <tr>
      <td><%=tbl.alg_egg %></td>
      <td><%=tbl.alg_shellfish %></td>
      <td><%=tbl.alg_fish %></td>
      <td><%=tbl.alg_soy  %></td>
      <td><%=tbl.alg_milk %></td>
      <td><%=tbl.alg_treenuts %></td>
      <td><%=tbl.alg_peanuts %></td>
      <td><%=tbl.alg_wheat %></td>
    </tr>
  <% end %>
</table>


<!--Ingredients List -->
<p class="sectionheader">Ingredients List: </p>  
<table class="table2">
  <col style="width:100%">
 
  <% @t_recipe.each do |tbl| %>
    <tr>
      <td><%=tbl.ingredient_list %></td>
    </tr>
  <% end %>
</table>


