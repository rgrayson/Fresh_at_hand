<%= render 'layouts/header' %>

<% if flash[:notice] %>
  <p class="p_alert1"><%= flash[:notice] %></p>
<% end %>

<!--Actions bar -->
<table class="table_actionbar">
  <col style="width:5">
  <col style="width:10">
  <col style="width:15"
  <tr>
    <td><strong>Actions:</strong></td>
    <td><%= button_to "Back", user_path, params: {id: params[:id],storeid: params[:storeid],storename: params[:storename]}, :method => :get%>   </td>
    <td><%= button_to "Submit" %>   </td>
  </tr>
</table>

<!-- Header -->  
<br>
<p class="p1">Store: <%= params[:storeid]%>, <%= params[:storename] %></p>
<p class="p1">Menu for: <%= @t2.mcode %>, <%= @t2.dte.strftime("%m/%d/%y") %></p>
<br>


<!-- Menu items -->
<table class="table2">
    
    <col style="width:23%">
    <col style="width:10%">
    <col style="width:25%">
    <col style="width:7%">
    <col style="width:5%">
    <col style="width:5%">
    <col style="width:5%">
    <col style="width:5%">
    <col style="width:5%">
    <col style="width:5%">
    <col style="width:5%">
    <col style="width:5%">
    
    <tr class="tableheader1">
        <th>Category</th>
        <th>Item</th>
        <th>Description</th>
        <th>Sell Prc</th>
        <th>UOFM</th>
        <th>H_Ord</th>
        <th>Avg Ord</th>
        <th>Avg Wst</th>
        <th>Sug Ord</th>
        <th>Qty Ord</th>
        <th>Change To</th>
        
        
    </tr>  
    
    <% @t.each do |tbl| %>
        <tr>
            <td><%= tbl.category %></td>
            <td><%= tbl.itemnmbr %></td>
            <td><%= tbl.itemdesc %></td>
            <td><%= tbl.selprc %></td>
            <td><%= tbl.uofm %></td>
            <td><%= tbl.h_ord %></td>
            <td><%= tbl.h_avgord %></td>
            <td><%= tbl.h_avgwst %></td>
            <td><%= tbl.h_sugord %></td>
            <td><%= tbl.qtyord %></td>
            <td><%= text_field_tag(:newqty,tbl.qtyord, size: 3, maxlength: 3) %></td>
            <td><%=button_to "Update",cscorder_path,params:{qty: :newqty, itemnmbr: tbl.itemnmbr, pk: tbl.id}, :method => :put %></td>
            <td><%= hidden_field_tag("pk",tbl.id,) %></td>
        </tr>
    <% end %>

</table>






                    