<%= render 'layouts/header' %>
<p style="font-size:large; font-weight:bold; padding:0px;">Login:</p>


<%= form_tag("/startup/login", method: "get") do %>
    
    <table class="table1">

        <col style="width:5%">
        <col style="width:35%">
        <tr>
            <td>Username:</td>
            <td><%= text_field_tag(:username, params[:u])%></td>
        </tr>
        <tr>
            <td>Password:</td>
            <td><%= password_field_tag(:password,params[:p]) %></td>
        </tr>
        <tr>
             <td>Login As:</td>
             <td><%= select_tag "ltyp", options_for_select([ "User", "Admin" ], params[:ltyp]) %></td>
        </tr>
    </table>
    
     <br>
     <br>
    
    <table>
    <tr>
        <td><%= submit_tag("Login") %></td>
        <td><p style="color:red"> <%=params[:msg]%> </p></td>
    </tr>
    </table

<br>


