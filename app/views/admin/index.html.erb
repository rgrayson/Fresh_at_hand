    <th>CATEGORY</th>
    <th>RECIPE</th>
    <th>DESCRIPTION</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  
  <% @t_recipe.each do |tbl| %>
    <tr>
      <td><%=tbl.catid %></td>
      <td><%=tbl.rid %></td>
      <td><%=tbl.rid_desc %></td>
