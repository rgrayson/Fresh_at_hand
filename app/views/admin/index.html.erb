<style>
    table {font-family: arial, sans-serif;
           border-collapse: collapse;
           width: 80%;
           }
    
    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;

</style>

<p>Add user to store:</p>
<%= form_for :adduser, url: admin_index_path, method: :post  do |f| %>
  
  <table>
    <col style="width:5%">
    <col style="width:20%"> 
  <tr>
    <td>Storeid:</td>
    <td><%= f.text_field(:storeid) %></td>
  </tr>
  <tr>
    <td>User:</td>
    <td><%= f.text_field(:user) %></td>
  </tr>
  <tr>
    <td>Password:</td>
    <td><%= f.text_field :pw %></td></tr>
  <tr>
    <td><%= f.submit "Add User" %></td>
    <td><p style="color:red"> <%=params[:msg]%> </p></td>
  </tr>
  </table>
  
<% end %>
    

<p>Current Store/User List:</p>

<table>
  <col style="width:20%">
  <col style="width:20%">
  <col style="width:40%">
  <col style="width:20%">
  
  <tr>
    <th>Store Id</th>
    <th>User Name</th>
    <th>Password</th>
  </tr>
  

<% @storeper.each do |tbl| %>
    <tr>
      <td><%=tbl.storeid %></td>
      <td><%=tbl.user %></td>
      <td><%=tbl.pw %></td>
      <td><%= link_to "Delete", admin_path(tbl.id),method: :delete,data: { confirm: "Delete store/user/pw permisisons now?" } %></td>
      
    </tr>
  <% end %>
</table>



