<%= render 'layouts/header_admin' %>


<!--  dropdown for categories -->
<table width="55%">
  <tr>
    <%= form_tag(admin_index_path, method: 'get') do %>
      <td><p class='p1'>Category: <%= select_tag("category",options_from_collection_for_select(@category,'category_name','category_name',@category_def), :class => 'p1') %></p> </td>
      <td><%= submit_tag 'Refresh',class: 'btn_med'  %></td>
     <% end %>
      <td><%= button_to('New Recipe',new_recipe_path,{method:'get',class:'btn_med_w'})%></td>
  </tr>  
</table>


<table class="table2">
  <col style="width:30%">
  <col style="width:10%">
  <col style="width:50%">
  <col style="width:5%">
  <col style="width:5%">
  <col style="width:5%">
  
