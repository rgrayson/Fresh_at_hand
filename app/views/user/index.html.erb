<%= render 'layouts/header' %>

<!--Actions bar -->
<table class="table_actionbar">
  <col style="width:5">
  <col style="width:10">
  <tr>
    <td><strong>Actions:</strong></td>
    <td><%=button_to "Logout", root_path, :method => :get %></td>
  </tr>
</table>

<%= render 'user' %>
<table class="table2">
  
  <col style="width:15%">
  <col style="width:15%">
  <col style="width:50%">
  <col style="width:20%">
  
  <tr class="tableheader1">
    <th>LOCNCODE</th>
    <th>STORE ID</th>
    <th>STORE NAME</th>
    <th>OPTIONS</th>
  </tr>
  
  <% @t.each do |tbl| %>
    <tr>
      <td><%=tbl.locncode %></td>
      <td><%=tbl.storeid %></td>
      <td><%=tbl.storename %></td>
      <td><%= link_to 'View Orders', user_path(id: tbl.id, storeid: tbl.storeid, storename: tbl.storename)  %></td>
    </tr>
  <% end %>
  
  
</table>



