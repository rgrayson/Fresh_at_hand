<%= render 'layouts/header' %>

<p class="p1">Update Qty for item: </p>

<%= form_tag cscorderli_path,:method => "put" do %>
    
    <% @t.each do |tbl| %>
    
    <p>Item: <%= label_tag("itemnmbr",tbl.itemnmbr) %></p>
    <p>Description: <%= tbl.itemdesc %></p>
    <p>Current Order Qty: <%= tbl.qtyord %></p>
    <p>Change to: <%= text_field_tag("newqty",params[:newqty],{size: 3, maxlength: 3}) %> </p>
    <%= hidden_field_tag("line_id",tbl.id) %>
    <%= submit_tag("Update") %></td>
    
    <% end %>
    
<% end %>

<br>
<%= button_to "Back",cscorder_path, :method => "get" %>
